<% include ./partials/header %>


<div class="container">
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <form action="/blogs/<%=data.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" placeholder="title" name="blog[title]" value="<%=data.title%>">
                </div>
                <div class="form-group">
                    <label for="image url">Image</label>
                    <input type="text" class="form-control"  placeholder="image url" name="blog[image]" value="<%=data.image%>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="blog[description]" rows="8"><%= data.description %></textarea>
                </div>
                <input type="submit" class="btn btn-default">
            </form>
        </div>
    </div>
</div>


<% include ./partials/footer %>